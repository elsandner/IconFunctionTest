<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0099cc"
    tools:context=".Presentation.VisualMode">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_HeadingVM"

            android:layout_width="368dp"
            android:layout_height="75dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center|top"
            android:text="Visual Mode"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            app:layout_constraintEnd_toEndOf="@id/fullscreen_content_controls"
            app:layout_constraintStart_toStartOf="@id/fullscreen_content_controls"
            app:layout_constraintTop_toTopOf="@id/fullscreen_content_controls" />

        <Button
            android:id="@+id/bt_Icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center|center"
            android:background="@drawable/custom_rounded_corners"
            android:onClick="onClickBt_Icon"
            android:text="ICON" />

        <TextView
            android:id="@+id/tv_Direction"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_primary_variant"
            android:text="Direction"
            android:textColor="#33b5e5"
            android:textSize="50sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:text="TextView" />

    </FrameLayout>

</FrameLayout>